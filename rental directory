<button class="btt" id="btt" onclick="window.scrollTo({top:0,behavior:'smooth'})" title="Back to top">‚Üë</button>

<script>
/* SCROLL */
const sp=document.getElementById('sp'),btt=document.getElementById('btt');
window.addEventListener('scroll',()=>{
  const pct=window.scrollY/(document.documentElement.scrollHeight-window.innerHeight);
  sp.style.transform=`scaleX(${Math.min(pct,1)})`;
  btt.classList.toggle('show',window.scrollY>400);
});

/* MOBILE NAV */
function openMob(){document.getElementById('mobNav').classList.add('open');document.body.style.overflow='hidden';}
function closeMob(){document.getElementById('mobNav').classList.remove('open');document.body.style.overflow='';}

/* FLEET TOGGLE */
function toggleFleet(btn){
  const fs=btn.closest('.fleet-section');
  const fb=fs.querySelector('.fleet-body');
  const open=fb.classList.toggle('open');
  btn.classList.toggle('open',open);
  btn.querySelector('.ft-left span:last-child').style.background=open?'var(--green)':'var(--green-light)';
}

/* CITY TABS ‚Äî scroll & highlight */
function jumpTo(id,btn){
  document.querySelectorAll('.ctab').forEach(t=>t.classList.remove('active'));
  btn.classList.add('active');
  if(id==='main'){window.scrollTo({top:document.getElementById('main').offsetTop-120,behavior:'smooth'});}
  else{const el=document.getElementById(id);if(el)el.scrollIntoView({behavior:'smooth',block:'start'});}
}
const sids=['intl','lagos','abuja','ph','others','national'];
const io=new IntersectionObserver(entries=>{
  entries.forEach(e=>{
    if(e.isIntersecting){
      const id=e.target.id;
      document.querySelectorAll('.ctab').forEach(t=>t.classList.remove('active'));
      const m=[...document.querySelectorAll('.ctab')].find(t=>t.getAttribute('onclick')?.includes("'"+id+"'"));
      if(m)m.classList.add('active');
    }
  });
},{threshold:0.15,rootMargin:'-100px 0px -60% 0px'});
sids.forEach(id=>{const el=document.getElementById(id);if(el)io.observe(el);});

/* FILTERING */
let citySet=new Set();
function cityF(cb,c){cb.checked?citySet.add(c):citySet.delete(c);filter();}
function filter(){
  const city=document.getElementById('fc').value;
  const type=document.getElementById('ft').value;
  const svc=document.getElementById('fs').value;
  const ftcbs=[...document.querySelectorAll('[data-ft]:checked')].map(c=>c.dataset.ft);
  const fscbs=[...document.querySelectorAll('[data-fs]:checked')].map(c=>c.dataset.fs);
  const cards=document.querySelectorAll('.company-card');
  let shown=0;
  cards.forEach(c=>{
    const dc=c.dataset.city||'',dt=c.dataset.type||'',ds=c.dataset.svc||'';
    let cm=city==='all'||dc.includes(city);
    if(citySet.size>0) cm=[...citySet].some(sc=>dc.includes(sc));
    const tm=type==='all'||dt===type;
    const sm=svc==='all'||ds.includes(svc.slice(0,4));
    const ftm=ftcbs.length===0||ftcbs.includes(dt);
    const fsm=fscbs.length===0||fscbs.some(s=>ds.includes(s));
    const show=cm&&tm&&sm&&ftm&&fsm;
    c.style.display=show?'block':'none';
    if(show)shown++;
  });
  document.getElementById('rcount').textContent=shown||'0';
  document.getElementById('nr').classList.toggle('show',shown===0);
  updatePills(city,type,svc);
}
function updatePills(c,t,s){
  const con=document.getElementById('apills');con.innerHTML='';
  if(c!=='all')addPill(con,c,()=>{document.getElementById('fc').value='all';filter();});
  if(t!=='all')addPill(con,t,()=>{document.getElementById('ft').value='all';filter();});
  if(s!=='all')addPill(con,s,()=>{document.getElementById('fs').value='all';filter();});
}
function addPill(con,label,fn){
  const p=document.createElement('div');p.className='pill';
  p.innerHTML=`${label} <button>‚úï</button>`;
  p.querySelector('button').addEventListener('click',fn);
  con.appendChild(p);
}
function resetF(){
  document.getElementById('fc').value='all';
  document.getElementById('ft').value='all';
  document.getElementById('fs').value='all';
  citySet.clear();
  document.querySelectorAll('.sidebar input[type="checkbox"]').forEach(cb=>cb.checked=false);
  document.querySelectorAll('.company-card').forEach(c=>c.style.display='block');
  document.getElementById('rcount').textContent='50+';
  document.getElementById('nr').classList.remove('show');
  document.getElementById('apills').innerHTML='';
}

/* ENTRANCE ANIMATION */
const ao=new IntersectionObserver(entries=>{
  entries.forEach(e=>{
    if(e.isIntersecting){e.target.style.opacity='1';e.target.style.transform='translateY(0)';ao.unobserve(e.target);}
  });
},{threshold:0.04});
document.querySelectorAll('.company-card').forEach((c,i)=>{
  c.style.opacity='0';c.style.transform='translateY(14px)';
  c.style.transition=`opacity .35s ease ${(i%5)*50}ms,transform .35s ease ${(i%5)*50}ms,box-shadow .22s,border-color .22s`;
  ao.observe(c);
});
</script>
</body>
</html>
